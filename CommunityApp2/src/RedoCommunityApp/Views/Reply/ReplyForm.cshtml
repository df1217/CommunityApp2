@model RedoCommunityApp.Models.ReplyViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewBag.Title = "Reply";
}
<h1>Enter Your Reply</h1>


<form asp-controller="Reply" asp-action="ReplyForm" method="post">
    <div class="form-group">
        <input asp-for="MessageID" type="hidden" />

        <label asp-for="MessageReply.Body"></label>
        <textarea asp-for="MessageReply.Body" class="form-control" rows="5"></textarea>
        <span asp-validation-for="MessageReply.Body" class="text-danger"></span>


        <button type="submit" class="btn btn-default">Post</button>
    </div>
</form>